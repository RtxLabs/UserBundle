{% extends "RtxLabsUserBundle:Password:index.html.twig" %}
{% block main %}
    <div id="password-main" class="full-block clearfix">
        <div class="alert alert-success"  style="display: none;">
            <p>
                <strong>{{ "core.general.notification.success.header" | trans }}</strong>
                {{ "rtxlabs.user.notification.user_successfully_saved" | trans }}
            </p>
        </div>
        <div class="alert alert-error" style="display: none;">
            <p>
                <strong>{{ "core.general.notification.error.header" | trans }}</strong>
                <p id="notification-error-body">
                </p>
            </p>
        </div>
        <div class="row">
            <div class="span6 confirmed">
                <legend>{{ 'rtxlabs.user.password.header' | trans }}:</legend>
                <form class="form-horizontal">
                    <div class="control-group" id="password-div">
                        <label class="control-label" for="password-password">{{ 'rtxlabs.user.label.password' | trans }}:</label>
                        <div class="input controls">
                            <input class="medium" id="password" name="password[password]" type="password"  value="">
                        </div>
                    </div>
                    <div class="control-group" id="password-passwordRepeat-div">
                        <label class="control-label" for="password-passwordRepeat">{{ 'rtxlabs.user.label.passwordRepeat' | trans }}:</label>
                        <div class="input controls">
                            <input class="medium" id="password-repeat" name="password[passwordRepeat]" type="password" value="">
                        </div>
                    </div>
                    <button id="save-password" type="button" class="btn small btn-info">{{ "rtxlabs.user.password.save" | trans }}</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}