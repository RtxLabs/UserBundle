{% extends 'RtxLabsUserBundle:Mail:mail_layout.html.twig' %}

{% block rtxlabs_email_subject %}[{{ pageTitle }}] - {{ "rtxlabs.user.mail.title.request_resetting" | trans }}{% endblock %}

{% block rtxlabs_email_body %}

<p>{{ "rtxlabs.user.mail.title.request_resetting_information" | trans }}:</p>
<ul>
    <li>{{ "rtxlabs.user.mail.label.username" | trans }}: {{ user.username }}</li>
    <li>{{ "rtxlabs.user.mail.label.confirmation_token" | trans }}: {{ user.confirmationToken }}</li>
</ul>
<br/>
{{ "rtxlabs.user.mail.label.login" | trans }}: <a href="{{ homepage }}">{{ homepage }}</a>

{% endblock %}
