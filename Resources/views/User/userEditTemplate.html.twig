<script type="text/template" id="user-edit-template">
    <div class="page-header">
        <h2>{{ "inventory.edit.header" | trans }}</h2>
    </div>
    <div class="alert-message success"  style="display: none;">
        <p>
            <strong>{{ "core.general.notification.success.header" | trans }}</strong>
            {{ "inventory.notification.success.body" | trans }}
        </p>
    </div>
    <div class="alert-message error" style="display: none;">
        <p>
            <strong>{{ "core.general.notification.error.header" | trans }}</strong>
        <p  id="notification-error-body">
        </p>
        </p>
    </div>

    <div class="row">
        <form class="form-stacked" action="#">
            <fieldset>
                <legend>{{ 'inventory.edit.fieldset.name' | trans }}</legend>

                <div class="clearfix">
                    <label>{{ 'inventory.edit.label.name' | trans }}:</label>
                    <div class="input"><input class="small" id="inventory-name" name="inventory-name" type="text"></div>
                </div>

                <div class="clearfix">
                    <label>{{ 'inventory.edit.label.ignorelists' | trans }}:</label>
                    <div class="input"><input class="large" id="ignore-list" type="text"></div>
                </div>
            </fieldset>
            <input id="save-inventory" type="button" class="btn small info" value="{{ "core.general.form.save" | trans }}"/>
            &nbsp;&nbsp;
            <a href="#" class="btn small">{{ "core.general.form.backtolist" | trans}}</a>
        </form>
    </div>
</script>