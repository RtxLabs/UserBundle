<script type="text/template" id="user-list-row-template">
    <td><img class="gravatar" width="14" height="14" src="<%= Core.Gravatar.url(email, {size: 14}) %>" /></td>
    <td><%= lastname %></td>
    <td><%= firstname %></td>
    <td><%= personnelNumber %></td>
    <td><%= email %></td>
    <td><%= username %></td>
    <td><%= _.indexOf(roles, 'ROLE_ADMIN')==-1 ? "&nbsp;" : '<img src="/bundles/rotexsbpcore/images/icons/tick.png" alt="yes">' %></td>
    <td><%= lastLogin==null ? '-' : Core.formatDateString(lastLogin, 'DD.MM.YYYY') %></td>
    <td>
        <ul class="crud-actions">
            <li><a class="edit" href="#edit/<%= id %>" title="{{ "core.general.tooltip.edit" | trans }}" rel="tooltip">{{ "core.general.label.edit" | trans }}</a></li>
            <li><a class="delete" href="#" title="{{ "core.general.tooltip.delete" | trans }}" rel="tooltip">{{ "core.general.label.delete" | trans }}</a></li>
        </ul>
    </td>
</script>